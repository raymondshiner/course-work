char ** clean(int argc, char **argv)
{
	int i;
	for(i = 0; i < argc; i++)
	{
		free(argv[i]);
		argv[i] = NULL;
	}
	free(argv);
    return NULL;
}// end clean

char * cleanUp(char * str)
{
    free(str);
    return NULL;

}// end cleanUp


void printargs(int argc, char **argv)
{
	int x;
	for(x = 0; x < argc; x++)
		printf("%s\n", argv[x]);

}// end printargs

char ** makeargs(char *s, int * argc)
{
	char *get = readString(); //gets our arguments

	char **temp = (char**)calloc(*argc,sizeof(char*)); //creation of our array
	
	char *token = strtok(get, " "); //gets our first argument
	int x;
	for(x = 0; x < *argc; x++)
	{
		strip(token);					//strips our token
		int size = strlen(token);			//gets str size
		temp[x] = (char *)calloc(size,sizeof(char)); 	//alloc mem
		temp[x] = token;				//put our token here
		token = strtok(get," "); 			//get argument
	}
	

	return temp;

}// end makeArgs


void strip(char * array)
{
	int x = 0;
	while (array[x] != '\0' && x < strlen(array))
	{
		if(array[x] == '\r')
			array[x] = '\0';

		else if(array[x] == '\n')
			array[x] = '\0';

		x++;

	}// end while
}// end function
